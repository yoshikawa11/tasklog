{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "deno",
			"command": "task",
			"args": [
				"dev",
				"--allow-read",
				"--allow-write",
			],
			"problemMatcher": [
				"$deno"
			],
			"label": "deno: dev",
			"detail": "$ deno run --allow-read --allow-write main.ts"
		},
		{
			"type": "deno",
			"command": "run",
			"args": [
				"--allow-read",
				"--allow-write",
				"${file}"
			],
			"problemMatcher": [
				"$deno"
			],
			"label": "deno: run current file",
			"detail": "$ deno run --allow-read --allow-write ${file}"
		},
				{
			"type": "deno",
			"command": "test",
			"args": [
				"--allow-read",
				"--allow-write",
				"${file}"
			],
			"problemMatcher": [
				"$deno"
			],
			"label": "deno: test current file",
			"detail": "$ deno test --allow-read --allow-write ${file}"
		}
	]
}